<Window x:Class="WpfHometask14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHometask14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Список дел" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" Margin="10"/>
        <Button Grid.Row="0" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top" Click="AddButtonClick">
            <Image Source="Image/add.png" Width="20" Height="20" />
        </Button>

        <DataGrid Grid.Row="1" Margin="5" Name="TaskListDataGrid" AutoGenerateColumns="False"
                  ItemsSource="{Binding TodoList}" RowBackground="White" AlternatingRowBackground="#FFFDFAF1"
                  HorizontalGridLinesBrush="#5EBEC4" GridLinesVisibility="Horizontal" HeadersVisibility="None"
                  CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Выполнено" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Doing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Выполнить до" Binding="{Binding DueDate, StringFormat=d}" Width="Auto"/>
                <DataGridTemplateColumn Header="Описание" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="50">
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="12" />
                            </ScrollViewer>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="DeleteButtonClick" Padding="0" Background="#5EBEC4">
                                <Image Source="Image/delete.png" Width="16" Height="16" Stretch="Uniform" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="White" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#ADD8E6"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Stretch" Margin="5">
            <TextBlock Name="ProgressText" HorizontalAlignment="Center"/>
            <ProgressBar Name="TaskProgressBar" Height="20" Margin="5">
                <ProgressBar.Resources>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Background" Value="#FFFDFAF1"/>
                        <Setter Property="Foreground" Value="#5EBEC4"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="#5EBEC4"/>
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>
        </StackPanel>
    </Grid>
</Window>
